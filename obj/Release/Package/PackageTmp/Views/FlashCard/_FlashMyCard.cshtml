@model DemoMVC.Models.FlashDrugSetModel
<link href="~/Content/flash-card.css" rel="stylesheet" />
<div>
    <h4>Drug Card[s]</h4>
    <hr />
    <div class="displayFront">
        <div class="displayContent">
            <span>
                <b>@Html.DisplayNameFor(m => m.currentDisplayDrug.DrugBrand)</b>: 

                @Html.DisplayFor(m => m.currentDisplayDrug.DrugBrand)
                @Html.HiddenFor(m => m.currentDisplayDrug.DrugBrand)
            </span>
        </div>
    </div>

    <div class="displayBack">
        <div class="displayContent">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(m => m.currentDisplayDrug.DrugType)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.currentDisplayDrug.DrugType)
                    @*@Html.HiddenFor(m => m.currentDisplayDrug.DrugType)*@
                </dd>

                <dt>
                    @Html.DisplayNameFor(m => m.currentDisplayDrug.DrugGeneric)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.currentDisplayDrug.DrugGeneric)
                    @*@Html.HiddenFor(m => m.currentDisplayDrug.DrugGeneric)*@
                </dd>

                <dt>
                    @Html.DisplayNameFor(m => m.currentDisplayDrug.Action)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.currentDisplayDrug.Action)
                    @*@Html.HiddenFor(m => m.currentDisplayDrug.Action)*@
                </dd>

                <dt>
                    @Html.DisplayNameFor(m => m.currentDisplayDrug.Therapeutic)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.currentDisplayDrug.Therapeutic)
                    @*@Html.HiddenFor(m => m.currentDisplayDrug.Therapeutic)*@
                </dd>

                <dt>
                    @Html.DisplayNameFor(m => m.currentDisplayDrug.Indication)
                </dt>

                <dd>
                    @Html.DisplayFor(m => m.currentDisplayDrug.Indication)
                    @*@Html.HiddenFor(m => m.currentDisplayDrug.Indication)*@
                </dd>

            </dl>
        </div>
    </div>
</div>

@Html.HiddenFor(x => x.currentArrayIndex)

@for(int i =0;i<Model.userDrugInfoArray.Length;i++) 
{
    @Html.HiddenFor(x => x.userDrugInfoArray[i])
}

<script src="~/Scripts/jquery-2.1.3.js"></script>
<script type="text/javascript">
    $('.displayBack').hide();
    $('.displayFront, .displayBack').on('click',
                              function ()
                              {
                                  $('.displayFront, .displayBack').toggle()
                              }
                           );
</script>
